{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ClipForge Studio",
  "version": "0.1.0",
  "identifier": "com.clipforge.studio",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "ClipForge Studio",
        "width": 1480,
        "height": 920,
        "minWidth": 1180,
        "minHeight": 720,
        "center": true,
        "decorations": false,
        "resizable": true,
        "fullscreen": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**",
          "$HOME/**",
          "$USERPROFILE/**",
          "$DOWNLOAD/**",
          "$DESKTOP/**",
          "$DOCUMENT/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
