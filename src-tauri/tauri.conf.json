{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Cursed Clipper",
  "version": "0.1.0",
  "identifier": "com.cursed.clipper",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Cursed Clipper",
        "width": 1480,
        "height": 920,
        "minWidth": 1180,
        "minHeight": 720,
        "center": true,
        "decorations": false,
        "resizable": true,
        "fullscreen": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: asset: https: http://asset.localhost https://asset.localhost; media-src 'self' data: blob: asset: http://asset.localhost https://asset.localhost; font-src 'self' data:; connect-src 'self' ipc: http://ipc.localhost https: http://localhost:* ws://localhost:* http://127.0.0.1:* ws://127.0.0.1:*; frame-ancestors 'none'; base-uri 'self'; form-action 'self'",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**",
          "$HOME/**",
          "$USERPROFILE/**",
          "$DOWNLOAD/**",
          "$DESKTOP/**",
          "$DOCUMENT/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/cc_logo.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
